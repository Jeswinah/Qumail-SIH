{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "env": {
    "VITE_KM_ENDPOINT": "https://your-project.vercel.app",
    "VITE_EMAIL_ENDPOINT": "https://your-project.vercel.app"
  },
  "functions": {
    "api/km/[...path].js": {
      "maxDuration": 10
    },
    "api/email/[...path].js": {
      "maxDuration": 10
    }
  }
}
